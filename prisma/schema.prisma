// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {

  id    String     @id @default(uuid())

  name  String

  gameKey String

  color String

  table String

  workItems WorkItem[]
}

model Game {

  id    Int     @id @default(autoincrement())

  code  String  @unique

}

model WorkItem {

  id    String     @id @default(uuid())

  table String

  blocker Int   @default(0)

  stage Int     @default(0)

  owner User? @relation(fields: [ownerId], references: [id])

  ownerId String?

  start Int     @default(0)

  end   Int?       

  lead_time Int?

  game_id String
}